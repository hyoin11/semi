		<Label layoutX="30.0" layoutY="40" text="비밀번호" 
		style="-fx-font-weight: bold; -fx-font-size: 16;" />
		<PasswordField fx:id="dropPass" layoutX="110.0" layoutY="30.0" 
		prefHeight="40.0" prefWidth="250.0" style="-fx-border-color: black;" />
		<Label fx:id="labelPass" layoutX="110.0" layoutY="90"
		style="-fx-text-fill: red;"/>
		<Button fx:id="dropBtnMem" layoutX="30.0" layoutY="110" text="탈퇴하기" prefHeight="40.0" prefWidth="330.0" 
		style="-fx-border-color: white; -fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
	</children>
</AnchorPane>

